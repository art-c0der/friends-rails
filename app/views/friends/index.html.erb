<p style="color: green"><%= notice %></p>
<h1>Friends List</h1>
<div class="table-responsive rounded">
  <table class="table table-striped table-hover">
    <thead>
      <tr class="table-dark">
        <th scope="col">ID</th>
        <th scope="col">First</th>
        <th scope="col">Last</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Age</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @friends.each do |friend| %>
        <tr>
          <th scope="row"><%= friend.id %></th>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.age %></td>
          <td>
            <div class="row nowrap" role="group" aria-label="Basic example">
              <div class="col-2">
                <%= link_to "Show", friend, class: 'btn btn-link' %>
              </div>
              <div class="col-2">
                <%= link_to "Edit", edit_friend_path(friend), class: 'btn btn-link' %>
              </div>
              <div class="col-2">
                <%= button_to "Delete", friend, method: :delete, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </td>
        </tr>
      </p>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to "Add a friend", new_friend_path, class: 'btn btn-success' %>
